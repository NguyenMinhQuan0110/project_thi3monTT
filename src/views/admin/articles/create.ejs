            <div class="container mt-4">
                <h2>Thêm Bài Viết Mới</h2>
                <form action="/admin/articles/create" id="articleForm" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Tiêu đề</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Mô tả</label>
                        <input type="text" class="form-control" id="description" name="description">
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Nội dung</label>
                        <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Hình ảnh</label>
                        <input type="file" class="form-control" id="image" name="images" accept="image/*" multiple>
                    </div>
                    <div id="imageError" class="text-danger mt-2" style="display: none;">
                        Bạn phải chọn ít nhất một hình ảnh!
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thể loại của bài viết</label>
                        <div>
                            <% categories.forEach(category => { %>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="category_<%= category.id %>" name="categories" value="<%= category.id %>">
                                    <label class="form-check-label" for="category_<%= category.id %>"><%= category.name %></label>
                                </div>
                            <% }) %>
                        </div>
                        <div id="categoryError" class="text-danger mt-2" style="display: none;">
                            Bạn phải chọn ít nhất một danh mục!
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Thêm bài viết</button>
                </form>
            </div>
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    const form = document.getElementById("articleForm");
                    const categoryError = document.getElementById("categoryError");
            
                    form.addEventListener("submit", function (event) {
                        const categoryCheckboxes = document.querySelectorAll("input[name='categories']:checked");
                        const imageInput= document.getElementById('image');
                        if (categoryCheckboxes.length === 0) {
                            event.preventDefault(); // Ngăn form gửi đi
                            categoryError.style.display = "block"; // Hiển thị thông báo lỗi
                        } else {
                            categoryError.style.display = "none"; // Ẩn thông báo nếu hợp lệ
                        }
                        if (imageInput.files.length === 0) {
                            event.preventDefault(); // Ngăn form gửi đi
                            imageError.style.display = "block";
                        }else{
                            imageError.style.display = "none";
                        }
                    });
                });
            </script>
              
