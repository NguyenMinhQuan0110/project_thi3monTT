            <main>
                <div class="container-fluid px-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            DataTable Example
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>Tiêu đề</th>
                                        <th>Mô tả</th>
                                        <th>Người đăng</th>
                                        <th>Danh mục</th>
                                        <th>Ngày tạo</th>
                                        <th>Hình ảnh</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Tiêu đề</th>
                                        <th>Mô tả</th>
                                        <th>Người đăng</th>
                                        <th>Danh mục</th>
                                        <th>Ngày tạo</th>
                                        <th>Hình ảnh</th>
                                        <th>Hành động</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% articles.forEach(article => { %>
                                        <tr>
                                            <td><%= article.title %></td>
                                            <td><%= article.description %></td>
                                            <td><%= article.users ? article.users.username : "N/A" %></td>
                                            <td><%= article.categories.map(cat => cat.name).join(", ") %></td>
                                            <td><%= article.createdAt.toLocaleString("vi-VN", { hour: "2-digit", minute: "2-digit", day: "2-digit", month: "2-digit", year: "numeric" }) %></td>
                                            <td>
                                                <% if (article.images && article.images.length > 0) { %>
                                                    <div class="image-grid">
                                                        <% article.images.forEach(image => { %>
                                                            <img src="/img/articles/<%= image.path %>" class="article-image">
                                                        <% }); %>
                                                    </div>
                                                <% } else { %>
                                                    Không có ảnh
                                                <% } %>
                                            </td>
                                            <td>
                                                <div style="display: flex;">
                                                    <div class="btn-group me-2">
                                                        <form action="/admin/articles/delete/<%= article.id %>" method="POST" onsubmit="return confirm('Bạn có chắc muốn xóa bài viết này không?')">
                                                            <button type="submit" class="btn btn-danger">Xóa</button>
                                                        </form>
                                                    </div>
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#editModal-<%=article.id%>" data-bs-whatever="@mdo">Sửa</button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <div class="modal fade" id="editModal-<%= article.id %>" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">
                                                            <%= article.id %>
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form action="/admin/articles/update" method="post" enctype="multipart/form-data">
                                                            <div class="mb-3">
                                                                <input type="hidden" value="<%= article.id %>" name="articleId">
                                                                <label for="description" class="form-label">Tiêu đề</label>
                                                                <input type="text" value="<%= article.title %>" name="title"
                                                                    class="form-control" required>
                                                                <label for="description" class="form-label">Mô tả</label>
                                                                <textarea type="text" rows="5" name="description"
                                                                    class="form-control" required><%= article.description %></textarea>
                                                                <label for="content" class="form-label">Nội dung</label>
                                                                <textarea type="text" rows="10" name="content"
                                                                    class="form-control" required><%= article.content %></textarea>
                                                                <label for="image" class="form-label">Hình ảnh</label>
                                                                <input type="file" class="form-control" id="image" name="images" accept="image/*" multiple>
                                                                <label class="form-label">Thể loại của bài viết</label>
                                                                <% categories.forEach(category => { %>
                                                                    <div class="form-check">
                                                                        <input class="form-check-input" type="checkbox"
                                                                            value="<%= category.id %>" name="categories"
                                                                            id="role-<%= article.id %>-<%= category.id %>" <%
                                                                            if (article.categories.some(articleCategoty=> articleCategoty.id
                                                                        === category.id)) { %> checked <% } %>
                                                                            <label class="form-check-label"
                                                                                for="category-<%= article.id %>-<%= category.id %>">
                                                                                <%= category.name %>
                                                                            </label>
                                                                    </div>
                                                                    <% }); %>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Close</button>
                                                                <button type="submit"
                                                                    class="btn btn-primary">Update</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </tbody>
                                
                            </table>
                        </div>
