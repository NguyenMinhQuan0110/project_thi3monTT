    <script>
        let currentSkip = 1; // Số bài viết đã hiển thị ban đầu (1 bài)
        const keywords = '<%= keywords %>'; // Lấy từ khóa tìm kiếm từ server

        document.getElementById('show-more-btn')?.addEventListener('click', async () => {
            try {
                const response = await fetch(`/load-more-search?skip=${currentSkip}&keywords=${encodeURIComponent(keywords)}`);
                if (!response.ok) throw new Error('Lỗi khi tải thêm bài viết');
                const data = await response.json();

                const articlesList = document.getElementById('search-articles-list');
                data.articles.forEach(article => {
                    const articleElement = document.createElement('div');
                    articleElement.className = 'news-item';
                    articleElement.innerHTML = `
                        <div class="news-thumbnail">
                            <a href="/detail/${article.id}">
                                <img src="/img/articles/${article.images && article.images.length > 0 ? article.images[0].path : 'default-image.jpg'}" alt="News Thumbnail">
                            </a>
                        </div>
                        <div class="news-content">
                            <h3 class="news-title"><a href="/detail/${article.id}">${article.title}</a></h3>
                            <p class="news-summary">${article.description}</p>
                        </div>
                    `;
                    articlesList.appendChild(articleElement);
                });

                currentSkip += 1; // Tăng số bài viết đã hiển thị

                if (!data.hasMore) {
                    document.getElementById('show-more-btn').style.display = 'none';
                }
            } catch (error) {
                console.error('Error loading more articles:', error);
                alert('Đã có lỗi xảy ra khi tải thêm bài viết. Vui lòng thử lại sau.');
            }
        });
    </script>
